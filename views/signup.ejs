<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../style/style.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <title>Signup Page</title>
  </head>
  <body>
    <div class="container">
      <div class="forms_container">
        <!-- SignUp -->
        <form action="/signup" method="post" id="signup" class="signup_form">
          <!-- user input-->
          <h2 class="title">Sign Up</h2>
          <div class="input_group">
            <div class="input_field">
              <i class="fas fa-user"></i>
              <input
                type="text"
                name="username"
                id="regUser"
                class="input_box"
                required
              />
              <label for="regUser">Username</label>
              <p class="error"></p>
            </div>
            <div class="input_field">
              <i class="fas fa-envelope"></i>
              <input
                type="text"
                name="email"
                id="regEmail"
                class="input_box"
                required
              />
              <label for="regEmail">Email address</label>
              <p class="error"></p>
            </div>
            <div class="input_field">
              <i class="fas fa-lock"></i>
              <input
                type="password"
                name="password"
                id="regPassword"
                class="input_box"
                required
              />
              <label for="regPassword">Password</label>
              <div class="eye-area">
                <div class="eye-box" onclick="myRegPassword()">
                  <i class="fa-regular fa-eye" id="eye-2"></i>
                  <i class="fa-regular fa-eye-slash" id="eye-slash-2"></i>
                </div>
              </div>
              <p class="error"></p>
            </div>
            <div class="remember">
              <input type="checkbox" id="formCheck" class="check" />
              <label for="formCheck"> Remember Me</label>
            </div>

            <!-- submit button -->
            <input type="submit" class="input-submit" value="Sign up" />
            <p class="social-text">Or Sign up with social platforms</p>
            <div class="social-media">
              <a href="/auth/github" class="social-icon">
                <i class="fab fa-github"></i>
              </a>
              <a href="/auth/google" class="social-icon">
                <i class="fab fa-google"></i>
              </a>
            </div>
          </div>
        </form> 
        <div class="footer">          
          <p class="social-text">Already have an account?<a href="/login" class="login">Login</a></p>
        </div>
      </div>
    </div>
    <script>


      var x = document.getElementById('login');
      var y = document.getElementById('signup');
      var z = document.getElementById('btn');

      function login(){
        x.style.right = "27px";
        y.style.left = "-350px";
        z.style.left = "150px";
      }
      function register(){
        x.style.right = "-350px";
        y.style.left = "25px";
        z.style.left = "0px";
      }

      // view password codes

      


      function myRegPassword() {
        var d = document.getElementById('regPassword');
        var b = document.getElementById("eye-2");
        var c = document.getElementById("eye-slash-2");
        if (d.type === "password") {
          d.type = "text"
          b.style.opacity = "0";
          c.style.opacity = "1";
        } else {
          d.type = "password"
          b.style.opacity = "1";
          c.style.opacity = "0";
        }
      }
    </script>
  </body>
</html>
